<%- model_class = Place -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:listing_title) %>:</strong></dt>
  <dd><%= @place.listing_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:listing_image) %>:</strong></dt>
  <dd><%= @place.listing_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @place.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @place.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postcode) %>:</strong></dt>
  <dd><%= @place.postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @place.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @place.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @place.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_guest) %>:</strong></dt>
  <dd><%= @place.max_guest %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_rooms) %>:</strong></dt>
  <dd><%= @place.num_rooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_beds) %>:</strong></dt>
  <dd><%= @place.num_beds %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_baths) %>:</strong></dt>
  <dd><%= @place.num_baths %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @place.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @place.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= @place.owner_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              places_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_place_path(@place), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              place_path(@place),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
