<div class="row">
	<div class="col-md-3">
		<div class="center">
			<%= image_tag avatar_link(@user), class: "avatar-full" %>
		
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">Verification</div>
			<div class="panel-body">
				Email Address<br>
				Phone Number
			</div>
		</div>
	</div>
	<div class="col-md-9">
		<h2><%= @user.firstname %></h2>

		<div class="description row-space-3">
			<%= @user.description %>
		</div>

		<h4>Listings (<%= @places.length %>)</h4><br>

		<div class="row">
			<% @places.each do |p| %>
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							<%= image_tag p.photos[0].image.url(:medium) %>
						</div>
						<div class="panel-body">
							<%= link_to p.listing_name, p %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
		<h4>Reviews</h4><br>
		<% @places.each do |p| %>
			<% if !p.reviews.blank? %>
				<% p.reviews.each do |review| %>
					<div class="row">
						<div class="col-md-2 text-center">
							<%= image_tag avatar_link(review.user), class: "img-circle avatar-medium" %><br>
							<%= review.user.fullname %>
						</div>
						<div class="col-md-10">
							<%= link_to p.listing_name, p %>
							<%= review.comment %><br>
							<%= review.created_at.strftime("%v") %>
						</div>
					</div>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>